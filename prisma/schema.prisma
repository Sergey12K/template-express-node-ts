generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//Биржа
model Burse {
  id           Int      @id @default(autoincrement())
  currency     Currency @relation(fields: [currencyName], references: [name])
  currencyName String
  price        Float
  recivedDate  DateTime
  totalBalance Int
  name         String
}

//Валюта
model Currency {
  id                  Int        @id @default(autoincrement())
  name                String     @unique
  priceFromCoinMarket Int
  shortLiquidated     Int
  longLiquidated      Int
  priceStory          PriceStory @relation(fields: [priceStoryId], references: [id])
  priceStoryId        Int        @unique
  burses              Burse[]
}

model PriceStory {
  id       Int       @id @default(autoincrement())
  Date     DateTime
  price    Float
  currency Currency?
}

model Post {
  id           Int     @id @default(autoincrement())
  direction    String
  body         String
  verification Boolean
}

model Network {
  id       Int    @id @default(autoincrement())
  gecko_id String
  tvl      Float
  name     String
  chainId  Int
  tag      Int
}

model Tweet {
  id           Int    @id @default(autoincrement())
  author       String
  text         String
  originalLink String
  views        Int
  comments     Int
}

model Hack {
  id            Int      @id @default(autoincrement())
  name          String
  theftAmount   Int
  discoveryDate DateTime
  description   String
}

model News {
  id           Int    @id @default(autoincrement())
  title        String
  originalLink String
  source       String
}

model Project {
  id          Int          @id @default(autoincrement())
  logo        String
  name        String
  leader      Investor?    @relation(fields: [leaderId], references: [id])
  leaderId    Int?
  investments Investment[]
}

model Investment {
  id        Int        @id @default(autoincrement())
  date      DateTime
  sum       Int
  stage     String
  project   Project?   @relation(fields: [projectId], references: [id])
  projectId Int?
  investors Investor[]
}

model Investor {
  id          Int          @id @default(autoincrement())
  logo        String
  name        String
  investments Investment[]
  projects    Project[]
}
